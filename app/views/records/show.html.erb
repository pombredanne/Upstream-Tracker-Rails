<p id="notice"><%= notice %></p>

<p>
  <b>Package Name:</b>
  <%= @record.pkgName %>
</p>

<p>
  <b>Branch:</b>
  <%= @record.branch %>
</p>

<p>
  <b>Method:</b>
  <%= @record.method %>
</p>

<p>
  <b>URL:</b>
  <%= @record.info %>
</p>

<p>
  <b>Processed?:</b>
  <%= @record.processed %>
</p>

<p>
  <b>Error?:</b>
  <%= @record.error %>
</p>

<p>
  <b>Error Message:</b>
  <%= @record.errorMessage %>
</p>

<p>
  <b>Latest Version:</b>
  <%= @record.latest_ver %>
</p>

<p>
  <b>File URL:</b>
  <%= @record.loc %>
</p>

<%= link_to 'Edit', edit_record_path(@record) %> |
<%= link_to 'Back', records_path %>

<br /><br /><br />
<hr>
<br />

<h3> Version History </h3>

<br />

<table border=1>
<tr>
	<th>
	Version
	</th>
	<th>
	Value
	</th>
	<th>
	Event
	</th>
	<th> </th>
</tr>	
<% for version in @record.versions.reverse %>
<tr>
	<td>
	<%= version.id %>
	</td>
	<td>
	<%= version.object %>
	</td>
	<td>
	<%= version.event %>
	</td>
	<td>
	<%= link_to "Restore", restore_path(:id=>@record.id, :ver=>version.id)%>
	</td>
</tr>
<% end %>
</table>